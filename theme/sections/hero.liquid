<div class="hero" style="background-image: url('{{ section.settings.image | img_url: 'master' }}');">
  <div class="hero__overlay" style="opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }}"></div>
  <div class="page-width">
    <div class="hero__content">
      <h1 class="hero__title">{{ section.settings.title }}</h1>
      <div class="hero__text">{{ section.settings.text }}</div>
      
      {%- if section.settings.button_label != blank -%}
        <a href="{{ section.settings.button_link }}" class="hero__button hero__button--primary">
          {{ section.settings.button_label }}
        </a>
      {%- endif -%}
      
      {%- if section.settings.button_label2 != blank -%}
        <a href="{{ section.settings.button_link2 }}" class="hero__button hero__button--secondary">
          {{ section.settings.button_label2 }}
        </a>
      {%- endif -%}
    </div>
  </div>
</div>

{% style %}
.hero {
  position: relative;
  display: flex;
  align-items: center;
  min-height: {{ section.settings.height }}px;
  background-size: cover;
  background-position: center;
  color: {{ section.settings.text_color }};
}

@media screen and (max-width: 767px) {
  .hero {
    min-height: {{ section.settings.height_mobile }}px;
  }
}

.hero__overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: {{ section.settings.overlay_color }};
}

.hero__content {
  position: relative;
  max-width: {{ section.settings.content_width }}px;
  margin-right: auto;
  {% if section.settings.align_content == 'center' %}
    margin-left: auto;
    text-align: center;
  {% elsif section.settings.align_content == 'right' %}
    margin-left: auto;
    text-align: right;
  {% endif %}
}

.hero__title {
  font-family: 'Cormorant Garamond', serif;
  font-weight: {{ section.settings.title_weight }};
  font-size: {{ section.settings.title_size }}px;
  line-height: 1.2;
  margin-bottom: 20px;
}

@media screen and (max-width: 767px) {
  .hero__title {
    font-size: {{ section.settings.title_size_mobile }}px;
  }
}

.hero__text {
  font-size: {{ section.settings.text_size }}px;
  margin-bottom: 30px;
}

.hero__button {
  display: inline-block;
  padding: 12px 24px;
  margin-right: 12px;
  margin-bottom: 12px;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  transition: background-color 0.3s, color 0.3s, border-color 0.3s;
}

.hero__button--primary {
  background-color: {{ section.settings.button_color }};
  color: {{ section.settings.button_text_color }};
  border: none;
}

.hero__button--primary:hover {
  background-color: {{ section.settings.button_hover_color }};
}

.hero__button--secondary {
  background-color: transparent;
  color: {{ section.settings.button2_text_color }};
  border: 1px solid {{ section.settings.button2_border_color }};
}

.hero__button--secondary:hover {
  background-color: {{ section.settings.button2_hover_color }};
  color: {{ section.settings.button2_hover_text_color }};
}
{% endstyle %}

